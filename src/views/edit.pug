extends base.pug


block content 
    h4 Updated Video
    form(method = "POST")
        input(name="title", placeholder="Video Title",value=video.title, required,maxlength=80)
        input(name="description", placeholder="Description", required, type="text", minlength=10,value=video.description)
        input(name="hashtags", placeholder="Hashtags, seperated by comma.", required, value=video.hashtags.join())
        input(value="Save",type="submit")